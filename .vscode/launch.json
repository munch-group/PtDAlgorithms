  "version": "0.2.0",
  "configurations": [
      {
        "name": "Python",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/test/testPy.py",
        // "module": "ptdalgorithms.${fileBasenameNoExtension}",
        "console": "integratedTerminal"
    },
    {
        "name": "(gdb) Attach",
        "type": "cppdbg",
        "request": "attach",
        "program": "/home/kmt/miniconda3/envs/phasetype/bin/python", 
        "processId": "${command:pickProcess}",
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            }
        ],
        // "additionalSOLibSearchPath": "${workspaceFolder}/build/lib.linux-x86_64-3.8;${workspaceFolder}/lib;${workspaceFolder}/lib/python3.8/site-packages/myadd-1.0.0-py3.8-linux-x86_64.egg/"
    },
    {
      "name": "Debug Python",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/test/testPy.py",  // update this location
      "console": "integratedTerminal",
      "args": [
        // other arguments that you want to use when running your code
      ]
    },
    {
      "name": "Debug C++",
      "type": "cppdbg",
      "request": "launch",
      "program": "/home/kmt/miniconda3/envs/phasetype/bin/python", 
      "args": [
        "${workspaceFolder}/test/testPy.py",           // update this location
        // other arguments that you want to use when running your code
      ],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
